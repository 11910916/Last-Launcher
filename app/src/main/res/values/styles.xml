<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/PopupMenutextSmall</item>
        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenutextLarge</item>

    </style>


    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PopupMenutextSmall" parent="android:TextAppearance.Widget.PopupMenu.Small">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="PopupMenutextLarge" parent="android:TextAppearance.Widget.PopupMenu.Large">
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>
